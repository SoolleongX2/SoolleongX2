<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_repo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="술렁 레포트"
            app:layout_constraintStart_toStartOf="@id/page_repo"
            app:layout_constraintTop_toTopOf="@id/page_repo"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/repo_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번주 목표"
                android:textSize="20sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/txt_goal_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N병 N잔"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="@id/txt_goal"
                app:layout_constraintTop_toBottomOf="@id/txt_goal"/>
            <TextView
                android:id="@+id/txt_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘은"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/txt_goal"
                app:layout_constraintTop_toBottomOf="@id/txt_goal_bottle"/>
            <TextView
                android:id="@+id/txt_dayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day N"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toEndOf="@id/txt_today"
                app:layout_constraintTop_toTopOf="@id/txt_today"/>
            <TextView
                android:id="@+id/txt_today_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번주는 N병 N잔 마심."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/txt_today"
                app:layout_constraintTop_toBottomOf="@id/txt_dayCount"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_day1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/repo_today">

            <TextView
                android:id="@+id/txt_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 1"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_day1_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="N병 N잔"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/txt_day1"
                app:layout_constraintTop_toBottomOf="@id/txt_day1" />

            <TextView
                android:id="@+id/txt_day1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N월 N일"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_day1_bottle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_day2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle"
            android:padding="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_day1">

            <TextView
                android:id="@+id/txt_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 2"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_day2_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="N병 N잔"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/txt_day2"
                app:layout_constraintTop_toBottomOf="@id/txt_day2" />

            <TextView
                android:id="@+id/txt_day2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N월 N일"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_day2_bottle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_day3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_day2">

            <TextView
                android:id="@+id/txt_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 3"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_day3_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="N병 N잔"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/txt_day3"
                app:layout_constraintTop_toBottomOf="@id/txt_day3" />

            <TextView
                android:id="@+id/txt_day3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N월 N일"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_day3_bottle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_day4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_day3">

            <TextView
                android:id="@+id/txt_day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 4"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_day4_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="N병 N잔"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/txt_day4"
                app:layout_constraintTop_toBottomOf="@id/txt_day4" />

            <TextView
                android:id="@+id/txt_day4_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N월 N일"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_day4_bottle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_day5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_day4">

            <TextView
                android:id="@+id/txt_day5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 5"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_day5_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="N병 N잔"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/txt_day5"
                app:layout_constraintTop_toBottomOf="@id/txt_day5" />

            <TextView
                android:id="@+id/txt_day5_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N월 N일"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_day5_bottle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_day6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_day5">

            <TextView
                android:id="@+id/txt_day6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 6"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_day6_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="N병 N잔"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/txt_day6"
                app:layout_constraintTop_toBottomOf="@id/txt_day6" />

            <TextView
                android:id="@+id/txt_day6_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N월 N일"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_day6_bottle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_day7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_day6">

            <TextView
                android:id="@+id/txt_day7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 7"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_day7_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="N병 N잔"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/txt_day7"
                app:layout_constraintTop_toBottomOf="@id/txt_day7" />

            <TextView
                android:id="@+id/txt_day7_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N월 N일"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_day7_bottle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>